# Checks that the testing code handles beta > 0 correctly.
convolution_test {
  reference {
    one_minus_alpha: 0.3
    beta: 0.4
    input {
      dimension: 1
      dimension: 1
      dimension: 128
      dimension: 128
      format: TENSOR_NCHW
      data_type: DATA_FLOAT
    }
    filter {
      dimension: 1
      dimension: 1
      dimension: 3
      dimension: 3
      format: TENSOR_NCHW
      data_type: DATA_FLOAT
    }
    convolution {
      pad: 1
      pad: 1
      compute_mode: DATA_FLOAT
    }
    fwd_algo: CONVOLUTION_FWD_ALGO_IMPLICIT_PRECOMP_GEMM
    label: "BlendResult"
  }
  test {
    all_algos: CONVOLUTION_FWD
  }
}

