convolution_test {
  reference {
    input {
      dimension: 1
      dimension: 1
      dimension: 128
      dimension: 128
      format: TENSOR_NHWC
      data_type: DATA_HALF
    }
    filter {
      dimension: 1
      dimension: 1
      dimension: 3
      dimension: 3
      format: TENSOR_NHWC
      data_type: DATA_HALF
    }
    convolution {
      pad: 1
      pad: 1
      compute_mode: DATA_FLOAT
